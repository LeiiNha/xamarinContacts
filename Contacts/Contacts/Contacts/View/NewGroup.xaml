<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="Contacts.View.NewGroup">
    <ContentPage.Content>
        <StackLayout>
            <Entry x:Name="NameEntry" Placeholder="Nome" PlaceholderColor="Gray" FontSize="20" Text="{Binding Name}" HorizontalOptions="FillAndExpand" />
            <Label x:Name="results" />
            <Button Text="Clique" Clicked="OnClick"/>
            <Button Text="Adicionar" Clicked="Button_Clicked"/>
        </StackLayout>
    </ContentPage.Content>
</ContentPage>