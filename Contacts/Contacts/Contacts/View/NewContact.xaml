<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="Contacts.View.NewContact">
    <ContentPage.ToolbarItems>
        <ToolbarItem Text="Save" Clicked="ToolbarItem_Clicked" />
    </ContentPage.ToolbarItems>
    <ContentPage.Content>
        <StackLayout Padding="20">
            <Entry Placeholder="Nome" PlaceholderColor="Gray" FontSize="20" />
            <Entry Placeholder="Endereço" PlaceholderColor="Gray" FontSize="20" />
            <Entry Placeholder="Email" PlaceholderColor="Gray" FontSize="20" />
            <Entry Placeholder="Telefone" PlaceholderColor="Gray" FontSize="20" />
        </StackLayout>
    </ContentPage.Content>
</ContentPage>